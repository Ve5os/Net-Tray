<Window x:Class="NetTray.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NetTray - Статус сети"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Width="350"
        Height="250"
        Focusable="True">

    <Border CornerRadius="8"
            Background="#2D2D30"
            BorderBrush="#3E3E40"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                            Opacity="0.3" 
                            ShadowDepth="0"
                            Color="Black"/>
        </Border.Effect>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="Статус сети"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                <TextBlock x:Name="StatusText"
                           Text="Проверяем..."
                           FontSize="12"
                           Foreground="#CCCCCC"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- График -->
            <Border Grid.Row="1"
                    Width="300"
                    Height="150"
                    CornerRadius="4"
                    Background="#1E1E1E"
                    BorderThickness="1"
                    BorderBrush="#3E3E40"
                    MouseDown="Border_MouseDown">

                <Canvas x:Name="ChartCanvas"
                        Width="300"
                        Height="150">
                    <Polyline x:Name="ChartLine"
                              Stroke="Green"
                              StrokeThickness="2"
                              StrokeLineJoin="Round"/>
                </Canvas>

            </Border>

            <!-- Статистика -->
            <Grid Grid.Row="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Текущий пинг"
                               FontSize="11"
                               Foreground="#CCCCCC"/>
                    <TextBlock x:Name="CurrentPing"
                               Text="--"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Средний"
                               FontSize="11"
                               Foreground="#CCCCCC"/>
                    <TextBlock x:Name="AvgPing"
                               Text="--"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Потери"
                               FontSize="11"
                               Foreground="#CCCCCC"/>
                    <TextBlock x:Name="PacketLoss"
                               Text="0%"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>