<Window x:Class="NetTray.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NetTray - Статус сети"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Width="350"
        Height="240"
        Focusable="True">

    <Border CornerRadius="8"
            Background="#2D2D30"
            BorderBrush="#3E3E40"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                            Opacity="0.3" 
                            ShadowDepth="0"
                            Color="Black"/>
        </Border.Effect>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="Статус сети"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"/>
            </StackPanel>

            <!-- График -->
            <Border Grid.Row="1"
                    Width="300"
                    Height="150"
                    CornerRadius="4"
                    Background="#1E1E1E"
                    BorderThickness="1"
                    BorderBrush="#3E3E40"
                    MouseDown="Border_MouseDown">

                <Canvas x:Name="ChartCanvas"
                        Width="300"
                        Height="150">
                    <!-- ChartLine теперь создается динамически в коде -->
                    <!-- Основная линия будет добавлена последней -->
                    <Polyline x:Name="ChartLine"
                              StrokeThickness="0"/>
                    <!-- Скрываем дефолтную линию -->
                </Canvas>

            </Border>

            <!-- Статистика - в одну строку -->
            <Grid Grid.Row="2" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Текущий пинг -->
                <StackPanel Grid.Column="0" 
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                    <TextBlock Text="СЕЙЧАС: "
                   FontSize="10"
                   Foreground="#AAAAAA"
                   VerticalAlignment="Center"/>
                    <TextBlock x:Name="CurrentPing"
                   Text="--"
                   FontSize="12"
                   FontWeight="SemiBold"
                   Foreground="White"
                   VerticalAlignment="Center"
                   Margin="2,0,0,0"/>
                </StackPanel>

                <!-- Средний пинг -->
                <StackPanel Grid.Column="1" 
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                    <TextBlock Text="AVG: "
                   FontSize="10"
                   Foreground="#AAAAAA"
                   VerticalAlignment="Center"/>
                    <TextBlock x:Name="AvgPing"
                   Text="--"
                   FontSize="12"
                   FontWeight="SemiBold"
                   Foreground="White"
                   VerticalAlignment="Center"
                   Margin="2,0,0,0"/>
                </StackPanel>

                <!-- Потери -->
                <StackPanel Grid.Column="2" 
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                    <TextBlock Text="ПОТЕРИ: "
                   FontSize="10"
                   Foreground="#AAAAAA"
                   VerticalAlignment="Center"/>
                    <TextBlock x:Name="PacketLoss"
                   Text="0%"
                   FontSize="12"
                   FontWeight="SemiBold"
                   Foreground="White"
                   VerticalAlignment="Center"
                   Margin="2,0,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>